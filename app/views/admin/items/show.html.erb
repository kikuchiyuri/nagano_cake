<h1>商品詳細</h1>

<%= image_tag @item.image %>>

<table>
  <tbody>
    <tr>
      <td>商品名</td>
  　　<td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格</br>(税抜価格)</td>
      <td><%= @item.add_tax_price.to_s %>（<%= @item.price %>）円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td></td>
    </tr>
  </tbody>
</table>
