<h1>商品新規登録</h1>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>


　<label>商品画像</label>
　<%= f.file_field :image, accept: "image/*" %>

　<label>商品名</label>
　<%= f.text_field :name %>

　<label>商品説明</label>
　<%= f.text_area :introduction %>

　<label>ジャンル</label>
　<%= f.collection_select :genre_id, @genres, :id, :name, :include_blank => "--選択してください--" %>

　<label>税抜価格</label>
　<span><%= f.text_field :price %>円</span>

  <%= foem_with
　<label>販売ステータス</label>
　<span>販売中</span>
　<span>販売停止中</span>

  <%= f.submit '新規登録' %>
<% end %>
