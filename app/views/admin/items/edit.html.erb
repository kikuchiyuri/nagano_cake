<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

  <label>商品画像</label>
  <%= f.file_field :image %>

  <label>商品名</label>
  <%= f.text_field :name %>

  <label>商品説明</label>
  <%= f.text_area :introduction %>

  <label>ジャンル</label>
  <%= f.collection_select :genre_id, @genres, :id, :name %>

  <label>税抜価格</label>
  <p><%= f.text_field :price %>円</p>

  <label>販売ステータス</label>
  <p>販売中</p>
  <p>販売停止中</p>

  <%= f.submit '変更を保存' %>

<% end %>