<h1>ジャンル一覧・追加</h1>

<!-- ジャンル名追加フォーム -->
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<!-- ジャンル一覧 -->
<table>
  <thead>
    <tr>
      <th></th>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td></td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>


