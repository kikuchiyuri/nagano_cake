<h1>配送先編集</h1>

<%= form_with model: @address, url: address_path(@address.id), method: :put do |f| %>

  <label>郵便番号（ハイフンなし）</label>
  <%= f.text_field :postal_code %>

  <label>住所</label>
  <%= f.text_area :address %>

  <label>宛名</label>
  <%= f.text_field :name %>

  <%= f.submit "変更内容を保存" %>

<% end %>
